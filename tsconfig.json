{
	"compileOnSave": false,
	"filesGlob": [
		"./typings/**/*.*.ts",
		"./typings-custom/*.*.ts",
		"./src/**/*.{ts,tsx}",
		"./test/**/*.ts"
	],
	"compilerOptions": {
		"jsx": "react",
		"target": "es5",
		"noImplicitAny": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"files": [
		"./typings-custom/tsd.d.ts",
		"./typings/index.d.ts"
	]
}